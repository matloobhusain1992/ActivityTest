<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mpin"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="jagran.zmq.com.activitytest.MpinActivity">

    <TextView
        android:id="@+id/textMpin"
        android:text="Enter mPIN"
        android:textColor="#000000"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:gravity="center_horizontal"
       android:layout_marginTop="20dp">
       <ImageView
           android:id="@+id/imageview_circle1"
           android:layout_width="15dp"
           android:layout_height="15dp"
           android:layout_margin="6dp"
           android:src="@drawable/circle_blank"
           />
       <ImageView
           android:id="@+id/imageview_circle2"
           android:layout_width="15dp"
           android:layout_height="15dp"
           android:layout_margin="6dp"
           android:src="@drawable/circle_blank"
           />
       <ImageView
           android:id="@+id/imageview_circle3"
           android:layout_width="15dp"
           android:layout_height="15dp"
           android:layout_margin="6dp"
           android:src="@drawable/circle_blank"
           />
       <ImageView
           android:id="@+id/imageview_circle4"
           android:layout_width="15dp"
           android:layout_height="15dp"
           android:layout_margin="6dp"
           android:src="@drawable/circle_blank"
           />

   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center">

                <RelativeLayout
                    android:id="@+id/one2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/selection">

                    <TextView
                        android:id="@+id/one"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:text="1"
                        android:textSize="30dp"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal|bottom"
                        android:layout_alignParentTop="true"/>

                    <TextView
                        android:id="@+id/one1"
                        android:layout_width="70dp"
                        android:layout_height="10dp"
                        android:textSize="10dp"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:layout_below="@+id/one"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"/>

                </RelativeLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center">


                <RelativeLayout
                    android:id="@+id/two2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/selection">

                    <TextView
                        android:id="@+id/two"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:text="2"
                        android:textSize="30dp"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal|bottom" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="10dp"
                        android:text="ABC"
                        android:textSize="8dp"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:layout_below="@+id/two"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"/>

                </RelativeLayout>
            </FrameLayout>



            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center">

                <RelativeLayout
                    android:id="@+id/three2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/selection">

                    <TextView
                        android:id="@+id/three"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:text="3"
                        android:textColor="#000000"
                        android:textSize="30dp"
                        android:gravity="center_horizontal|bottom"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="10dp"
                        android:text="DEF"
                        android:textSize="8dp"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:layout_below="@+id/three"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"/>

                </RelativeLayout>
            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="20dp">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center">

                <RelativeLayout
                    android:id="@+id/four2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@drawable/selection">

                    <TextView
                        android:id="@+id/four"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:text="4"
                        android:textSize="30dp"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal|bottom" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="10dp"
                        android:text="GHI"
                        android:textSize="8dp"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:layout_below="@+id/four"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"/>

                </RelativeLayout>

            </FrameLayout>


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center">

                <RelativeLayout
                    android:id="@+id/five2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@drawable/selection">

                    <TextView
                        android:id="@+id/five"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:text="5"
                        android:textSize="30dp"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal|bottom" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="10dp"
                        android:text="JKL"
                        android:textSize="8dp"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:layout_below="@+id/five"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"/>

                </RelativeLayout>


            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center">

                <RelativeLayout
                    android:id="@+id/six2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@drawable/selection">

                    <TextView
                        android:id="@+id/six"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:text="6"
                        android:textColor="#000000"
                        android:textSize="30dp"
                        android:gravity="center_horizontal|bottom"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="10dp"
                        android:text="MNO"
                        android:textSize="8dp"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:layout_below="@+id/six"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"/>

                </RelativeLayout>

            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="20dp">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center">

                <RelativeLayout
                    android:id="@+id/seven2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@drawable/selection">

                    <TextView
                        android:id="@+id/seven"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:text="7"
                        android:textSize="30dp"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal|bottom" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="10dp"
                        android:text="PQRS"
                        android:textSize="8dp"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:layout_below="@+id/seven"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"/>

                </RelativeLayout>

            </FrameLayout>


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center">

                <RelativeLayout
                    android:id="@+id/eight2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@drawable/selection">

                    <TextView
                        android:id="@+id/eight"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:text="8"
                        android:textSize="30dp"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal|bottom" />
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="10dp"
                        android:text="TUV"
                        android:textSize="8dp"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:layout_below="@+id/eight"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"/>

                </RelativeLayout>


            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center">


                <RelativeLayout
                    android:id="@+id/nine2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@drawable/selection">

                    <TextView
                        android:id="@+id/nine"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:text="9"
                        android:textColor="#000000"
                        android:textSize="30dp"
                        android:gravity="center_horizontal|bottom"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="10dp"
                        android:text="WXYZ"
                        android:textSize="8dp"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:layout_below="@+id/nine"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"/>

                </RelativeLayout>

            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="20dp">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center">

                <RelativeLayout
                    android:id="@+id/zero2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@drawable/selection">

                    <TextView
                        android:id="@+id/zero"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:text="0"
                        android:textSize="30dp"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="10dp"
                        android:textSize="8dp"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:layout_below="@+id/zero"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"/>

                </RelativeLayout>

            </FrameLayout>



            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center">

                <RelativeLayout
                    android:id="@+id/cancel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@drawable/selection">

                    <TextView
                        android:id="@+id/cancel"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:text="x"
                        android:textColor="#000000"
                        android:textSize="30dp"
                        android:gravity="center"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="10dp"
                        android:textSize="8dp"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:layout_below="@+id/cancel"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"/>

                </RelativeLayout>

            </FrameLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
